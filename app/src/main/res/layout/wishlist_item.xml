<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:id="@+id/iv_wishlist_template"/>
       <RelativeLayout
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_toRightOf="@+id/iv_wishlist_template"
           android:layout_toLeftOf="@+id/iv_wishlist_delete"
           android:layout_centerVertical="true"
           >
           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:id="@+id/tv_wishlist_name"
               android:text="Name"
               android:textSize="19sp"
               android:layout_marginTop="10dp"
               android:layout_marginLeft="10dp"

               android:textStyle="bold"/>
           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:id="@+id/tv_wishlist_price"
               android:textSize="15dp"
               android:layout_below="@+id/tv_wishlist_name"
               android:text="Price"
               android:layout_margin="10dp" />

       </RelativeLayout>

    <ImageView
        android:id="@+id/iv_wishlist_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        app:srcCompat="@drawable/baseline_delete_black_36" />
</RelativeLayout>